<h1>Welcome to Song-Wall</h1>

<% if @songs.any? %>
  <div>
    <h2>Songs people have posted:</h2>
    <ul>
      <% @songs.each do |song| %>
        <li><%="#{song.author} - #{song.title} #{song.url}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<a href="/add_song"><h2  class="btn btn-primary btn-lg">Add your favorite song here!</h2></a> 
