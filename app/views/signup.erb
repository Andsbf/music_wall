 <h1>Welcome!</h1> 
  <% if @user.errors.messages.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"> <%= message %> </div> 
    <% end %>
  <% end %>



 <form method='post' action='/signup'>
  <div>
    <h3>User Name:</h3>
        <input type='text' name='username' placeholder='User name' size='45px' value='<%=@user.username%>' class="form-control">
  </div>
  <div>
    <h3>Password:</h3>
    <input type='password' name='password' placeholder='Password' size='45px' value='<%=@user.password%>' class="form-control">
  </div>
  <div>
    <h3>Email:</h3>
    <input type='text' name='email' placeholder='Email(Optional)' size='45px' value='<%=@user.email%>' class="form-control">
  </div>

  <div>
  <br>
    <input type='submit' value='SignUp' class="btn btn-primary btn-lg">
  </div>
</form> 

